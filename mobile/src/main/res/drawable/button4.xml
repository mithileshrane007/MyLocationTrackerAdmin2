<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f0f0f0" />
            <gradient android:angle="-90" android:endColor="#aaaaaa" android:startColor="#c3c3c3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#dbdbdb" />
            <solid android:color="#dbdbdb"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#dbdbdb" />
            <gradient android:angle="-90" android:endColor="#dbdbdb" android:startColor="#dbdbdb" />
        </shape>
    </item>

</selector>