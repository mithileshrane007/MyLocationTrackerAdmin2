<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen_min"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.infiny.mylocationtrackeradmin.Activities.SignUpActivity"
    tools:showIn="@layout/activity_sign_up">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:id="@+id/rel_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical|center_horizontal"
                android:padding="@dimen/activity_horizontal_margin"
                android:requiresFadingEdge="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_cmpy_id_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company ID"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_cmpy_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cmpy_id_txt"
                    android:text=""
                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/white"
                    />
                <TextView
                    android:id="@+id/tv_passwd_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cmpy_id"

                    android:text="Password"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd_txt"
                    android:text=""

                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/white"
                    />

                <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@android:color/holo_red_light"

                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_sign_in"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:text="Not Register?"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:id="@+id/rel_signup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical|center_horizontal"
                android:padding="@dimen/activity_horizontal_margin"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_cmpy_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Name"

                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_cmpy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cmpy_name_title"
                    android:text=""
                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/white"
                    />
                <TextView
                    android:id="@+id/tv_owner_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cmpy_name"

                    android:text="Founder Name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_owner_name_title"
                    android:text=""

                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/white"
                    />

                <TextView
                    android:id="@+id/tv_time_interval_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_owner_name"

                    android:text="Time Interval Tracker"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_time_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time_interval_title"
                    android:text=""

                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/white"
                    />

                <TextView
                    android:id="@+id/tv_time_out_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time_interval"

                    android:text="Time Out Tracker"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_time_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time_out_title"
                    android:text=""

                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/white"
                    />

                <TextView
                    android:id="@+id/tv_passwd_signup_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time_out"

                    android:text="Password"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_passwd_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd_signup_txt"
                    android:text=""

                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/white"
                    />

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd_signup"
                    android:layout_marginTop="25dp"
                    android:background="@android:color/holo_red_light"
                    android:text="Create"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>



            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
