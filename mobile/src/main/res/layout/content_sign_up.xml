<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.infiny.mylocationtrackeradmin.Activities.SignUpActivity"
    tools:showIn="@layout/activity_sign_up">

    <RelativeLayout
        android:id="@+id/rel_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical|center_horizontal"
                android:padding="@dimen/activity_horizontal_margin"
                android:requiresFadingEdge="vertical"
                >

                <TextView
                    android:id="@+id/tv_cmpy_id_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login ID"
                   android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_cmpy_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cmpy_id_txt"
                    android:text=""
                   />
                <TextView
                    android:id="@+id/tv_passwd_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cmpy_id"
                    android:text="Password"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd_txt"
                    android:inputType="textPassword"
                    android:text=""
                    />

                <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@android:color/holo_red_light"
                    android:text="Sign In"

                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_sign_in"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:text="Not Register?"
                   />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/rel_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical|center_horizontal"
                android:padding="@dimen/activity_horizontal_margin"
                >

                <TextView
                    android:id="@+id/tv_cmpy_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"

                   android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_cmpy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cmpy_name_title"
                    android:text=""                  />
                <TextView
                    android:id="@+id/tv_owner_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cmpy_name"

                    android:text="Email"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_owner_name_title"
                    android:inputType="textEmailAddress"
                    android:text=""

                />

                <TextView
                    android:id="@+id/tv_time_interval_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_owner_name"
                    android:text="Time Interval Tracker"
                    android:textSize="@dimen/activity_horizontal_margin"
                    android:visibility="gone"/>


                <EditText
                    android:id="@+id/tv_time_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time_interval_title"
                    android:inputType="number"
                    android:text=""
                    android:visibility="gone"


                    />

                <TextView
                    android:id="@+id/tv_addr_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time_interval"

                    android:text="Phone"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_addr_title"
                    android:inputType="number"
                    android:maxLength="10"
                    android:text=""

                    />

                <TextView
                    android:id="@+id/tv_passwd_signup_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_addr"

                    android:text="Password"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_passwd_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd_signup_txt"
                    android:text=""


                    />

                <TextView
                    android:id="@+id/tv_passwd_signup_confirm_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd_signup"

                    android:text="Confirm Password"
                    android:textSize="@dimen/activity_horizontal_margin"/>


                <EditText
                    android:id="@+id/tv_passwd_signup_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd_signup_confirm_txt"
                    android:text=""


                    />

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_passwd_signup_confirm"
                    android:layout_marginTop="25dp"
                    android:background="@android:color/holo_red_light"

                    android:text="Create"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_horizontal_margin"/>



            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rel_login_sucess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical|center_horizontal"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_details_sucess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Your Login ID is :"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/tv_details_sucess1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_details_sucess"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center"
            android:text="458 545"
            android:textIsSelectable="true"
            android:textSize="25dp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/tv_details_sucess2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_details_sucess1"
            android:layout_centerInParent="true"
            android:text="Please safe further use."

            android:textSize="25dp" />
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_details_sucess2"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@android:color/holo_red_light"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/activity_horizontal_margin"/>

    </RelativeLayout>


</RelativeLayout>
