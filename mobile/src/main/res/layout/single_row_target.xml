<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/ll_single_target_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="2dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:padding="8dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_target"
                android:layout_width="@dimen/iv_single_img"

                android:layout_height="@dimen/iv_single_img"
                android:src="@drawable/images"
                />

            <TextView
                android:id="@+id/tv_name_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/iv_target"
                android:text="dsfdfdfdffd"
                android:textSize="@dimen/tv_48dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
